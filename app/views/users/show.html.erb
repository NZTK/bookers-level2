<%= render "home/header" %>
<%= render "users/left" , user: @user , book: @book %>
        <div class="col-xs-9" >
          <h2>Books</h2>
          <table class="table table-hover">
            <thead>
              <tr>
              	<th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th callspan="3" ></th>
              </tr>
            </thead>
            <tbody>

              <% @books.each do |f| %>
              <tr>
              	<td><%= link_to user_path do %>
              		<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: "jpg" , fallback: "no_image.jpg" , size: '40x40' %>
              		<% end %></td>
                <td><%= link_to f.title , book_path(f) ,class: "book_#{@book.id}"%></td>
                <td><%= f.body %></td>
              </tr>
              <% end %>
            </tbody>



          </table>
        </div>
   </div>
</div>
<%= render "home/footer" %>