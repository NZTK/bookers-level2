<div class="body">
  <div class="container">
        <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if @book.errors.any? %>
            <div id="error_explanation" >
              <ul>
                <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
      <div class="row">
        <div class="col-xs-3" >
          <h2>User info</h2>
          <table class="table" >

            <tbody>
              <tr>
                <th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpg" , fallback: "no_image.jpg" %>
                </th>
              </tr>
              <tr>
                <th>name</th>

                <th><%= current_user.name %></th>
              </tr>
              <tr>

                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>

            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(current_user.id) , class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{}" do %>
          <% end %>
          </div>
        <h2>New Book</h2>
        


          <%= form_for(book) do |f| %>

            <div class="field row">
              <%= f.label :Title %><br>
              <%= f.text_field :title, class: "col-xs-12 book_title" , id: :book_title %>
            </div>

            <div class="field row">
              <%= f.label :Opinion %><br>
              <%= f.text_area :body, class: "col-xs-12 book_body" , id: :book_body %>
            </div>




            <div class="actions row">
              <%= f.submit "Create Book" , class: "btn btn-primary col-xs-12" %>
            </div>
           <% end %>
          </div>


