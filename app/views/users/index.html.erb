          <h2>Users</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th>name</th>
                <th></th>
                <th callspan="3" ></th>
              </tr>
            </thead>

            <tbody>
              <% @user.each do |user| %>
              <tr>
                <td><%=  %></td>
                <td><%= user.name %></td>
