<%= render "home/header" %>
<%= render "users/left" , user: @user , book: @book%>
      <div class="col-xs-9" >
          <h2>Users</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th>name</th>
                <th></th>
                <th callspan="3" ></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |u| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: "jpg" , fallback: "no_image.jpg" , size: '40x40' %></td>
                <td><%= link_to u.name , book_path(@user.id) %></td>
                <td><%= link_to "Show" , user_path(@user.id) , class: "user_#{@user}" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>
<%= render "home/footer" %>