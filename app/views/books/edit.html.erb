<%= render "home/header" %>
<div class="body" >
	<div class="container">

		<% if @book.errors.any? %>
            <div id="error_explanation" >
              <ul>
                <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
		<div class= "col-md-6 col-md-offset-3" >
		<h1>Editing Book</h1>

          <%= form_for(@book) do |f| %>

            <div class="field row">
              <%= f.label :Title %><br>
              <%= f.text_field :title, class: "col-xs-12" , id: :post_title %>
            </div>

            <div class="field row">
              <%= f.label :Opinion %><br>
              <%= f.text_area :body, class: "col-xs-12" , id: :post_body %>
            </div>
            <div class="actions row">
              <%= f.submit "Update Book" , class: "btn btn-primary col-xs-12" %>
            </div>
            <%= link_to "Show" , book_path(@book.id) , class: "show_#{@book.id}" %>
				|
			<%= link_to "Back" , "/books" , class: "back" %>
          <% end %>
      </div>
     </div>
 </div>


<%= render "home/footer" %>