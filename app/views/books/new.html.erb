<div class="body">
  <div class="container">
    <p id="notice"></p>
      <div class="row">
        <div class="col-xs-3" >
          <h2>New Book</h2>

          <%= form_for(@book) do |f| %>

            <div class="field row">
              <%= f.label :Title %><br>
              <%= f.text_field :title, class: "col-xs-12" , id: :post_title %>
            </div>

            <div class="field row">
              <%= f.label :Opinion %><br>
              <%= f.text_area :body, class: "col-xs-12" , id: :post_body %>
            </div>




            <div class="actions row">
              <%= f.submit "Create Book" , class: "btn btn-primary col-xs-12" %>
            </div>
           <% end %>
        </div>
       </div>
   </div>
</div>


